<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutActivity">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Tentang BLIapp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/app_icon_about"
        app:layout_constraintStart_toStartOf="@+id/app_icon_about"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/app_icon_about"
        android:layout_width="270dp"
        android:layout_height="288dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_title"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_splash" />

    <TextView
        android:id="@+id/nama_aplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/app_icon_about"
        app:layout_constraintStart_toStartOf="@+id/app_icon_about"
        app:layout_constraintTop_toBottomOf="@+id/app_icon_about" />

    <TextView
        android:id="@+id/version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="version palceholder"
        app:layout_constraintEnd_toEndOf="@+id/app_icon_about"
        app:layout_constraintStart_toStartOf="@+id/app_icon_about"
        app:layout_constraintTop_toBottomOf="@+id/nama_aplikasi" />

    <TextView
        android:id="@+id/developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/made_by_about_activity"
        android:minLines="2"
        app:layout_constraintEnd_toEndOf="@+id/app_icon_about"
        app:layout_constraintStart_toStartOf="@+id/app_icon_about"
        app:layout_constraintTop_toBottomOf="@+id/version_number" />

    <TextView
        android:id="@+id/name_pertama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gede Ocha Dipa Ananda (1805551017)"
        app:layout_constraintEnd_toEndOf="@+id/app_icon_about"
        app:layout_constraintStart_toStartOf="@+id/app_icon_about"
        app:layout_constraintTop_toBottomOf="@+id/developer" />

    <TextView
        android:id="@+id/name_kedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="I Gde Putu Harry Putra Pratama (1805551047)"
        app:layout_constraintEnd_toEndOf="@+id/app_icon_about"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/app_icon_about"
        app:layout_constraintTop_toBottomOf="@+id/name_pertama" />

    <TextView
        android:id="@+id/name_ketiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Anak Agung Bagus Wiryadika (1805551059)"
        app:layout_constraintEnd_toEndOf="@+id/app_icon_about"
        app:layout_constraintStart_toStartOf="@+id/app_icon_about"
        app:layout_constraintTop_toBottomOf="@+id/name_kedua" />

</androidx.constraintlayout.widget.ConstraintLayout>